@model CRM.Web.Models.Prospect

@{
    ViewData["Title"] = "Détails du Prospect";
}

<h1>Détails du Prospect</h1>

<div>
    <h4>Prospect</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CompanyName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CompanyName)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ContactPerson)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ContactPerson)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-10"><span class="badge bg-primary">@Model.Status</span></dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EstimatedValue)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EstimatedValue)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Notes)</dd>
    </dl>
</div>

<div>
    <h4>Communications</h4>
    <a asp-controller="Communications" asp-action="Create" asp-route-prospectId="@Model.Id" class="btn btn-sm btn-primary mb-2">Ajouter Communication</a>
    
    @if (Model.Communications.Any())
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Sujet</th>
                    <th>Contenu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comm in Model.Communications.OrderByDescending(c => c.CommunicationDate))
                {
                    <tr>
                        <td>@comm.CommunicationDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@comm.Type</td>
                        <td>@comm.Subject</td>
                        <td>@comm.Content.Substring(0, Math.Min(50, comm.Content.Length))...</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Aucune communication pour ce prospect.</p>
    }
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
