@model CRM.Web.Models.Communication

@{
    ViewData["Title"] = "Nouvelle Communication";
    var contacts = ViewBag.Contacts as List<CRM.Web.Models.Contact>;
    var clients = ViewBag.Clients as List<CRM.Web.Models.Client>;
    var suppliers = ViewBag.Suppliers as List<CRM.Web.Models.Supplier>;
    var prospects = ViewBag.Prospects as List<CRM.Web.Models.Prospect>;
}

<h1>Nouvelle Communication</h1>

<h4>Communication</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Subject" class="control-label">Sujet</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label">Contenu</label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label">Type</label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<CRM.Web.Models.CommunicationType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CommunicationDate" class="control-label">Date de communication</label>
                <input asp-for="CommunicationDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="CommunicationDate" class="text-danger"></span>
            </div>
            
            <h5>Associer à:</h5>
            
            <div class="form-group mb-3">
                <label asp-for="ContactId" class="control-label">Contact</label>
                <select asp-for="ContactId" class="form-control">
                    <option value="">-- Sélectionner un contact --</option>
                    @if (contacts != null)
                    {
                        @foreach (var contact in contacts)
                        {
                            <option value="@contact.Id" selected="@(contact.Id == Model.ContactId)">@contact.FirstName @contact.LastName</option>
                        }
                    }
                </select>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ClientId" class="control-label">Client</label>
                <select asp-for="ClientId" class="form-control">
                    <option value="">-- Sélectionner un client --</option>
                    @if (clients != null)
                    {
                        @foreach (var client in clients)
                        {
                            <option value="@client.Id" selected="@(client.Id == Model.ClientId)">@client.CompanyName</option>
                        }
                    }
                </select>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="SupplierId" class="control-label">Fournisseur</label>
                <select asp-for="SupplierId" class="form-control">
                    <option value="">-- Sélectionner un fournisseur --</option>
                    @if (suppliers != null)
                    {
                        @foreach (var supplier in suppliers)
                        {
                            <option value="@supplier.Id" selected="@(supplier.Id == Model.SupplierId)">@supplier.CompanyName</option>
                        }
                    }
                </select>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ProspectId" class="control-label">Prospect</label>
                <select asp-for="ProspectId" class="form-control">
                    <option value="">-- Sélectionner un prospect --</option>
                    @if (prospects != null)
                    {
                        @foreach (var prospect in prospects)
                        {
                            <option value="@prospect.Id" selected="@(prospect.Id == Model.ProspectId)">@prospect.CompanyName</option>
                        }
                    }
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
